<!--
/* Product REST API
 *
 * @category GoDataFeed
 * @package GoDataFeed_Restapi
 */
-->
<config>
    <api2>
        <resource_groups>
            <restapi translate="title" module="GoDataFeed_Restapi">
                <title>Restapi API</title>
                <sort_order>10</sort_order>
                <children>
                    <restapi_product translate="title" module="api2">
                        <title>Product</title>
                        <sort_order>50</sort_order>
                    </restapi_product>
                </children>
            </restapi>
        </resource_groups>
        <resources>
            <restapi translate="title" module="api2">
                <model>restapi/api2_product</model>
                <title>Product Rest Api</title>
                <sort_order>10</sort_order>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                        <delete>1</delete>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <update>1</update>
                        <create>1</create>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <attributes translate="entity_id type_id parent_product_id stock_data base_image_url gallery_images price weight gender meta_keyword color size brand
                                      length width height unit category_id category_name category_parent_id category_parent_name quantity special_price is_saleable tax url is_in_stock url_key_create_redirect" module="api2">
                    <entity_id>Product ID</entity_id>
                    <type_id>Product Type</type_id>
                    <parent_product_id>Parent Product ID</parent_product_id>
                    <stock_data>Inventory Data</stock_data>
                    <base_image_url>Base/Default Image</base_image_url>
                    <gallery_images>Gallery Image</gallery_images>
                    <price>Price</price>
                    <weight>Weight</weight>
                    <gender>Gender</gender>
                    <meta_keyword>Meta Keyword</meta_keyword>
                    <color>Color</color>
                    <size>Size</size>
                    <brand>Brand</brand>
                    <length>Length</length>
                    <width>Width</width>
                    <height>Height</height>
                    <unit>Unit</unit>
                    <category_id>Category ID</category_id>
                    <category_name>Category Name</category_name>
                    <category_parent_id>Category Parent Id</category_parent_id>
                    <category_parent_name>Category Parent Name</category_parent_name>
                    <quantity>Quantity</quantity>
                    <special_price>Special Price</special_price>
                    <is_saleable>Salability Status</is_saleable>
                    <tax>Tax</tax>
                    <shipping_price>Shipping Price</shipping_price>
                    <url>Product URL</url>
                    <is_in_stock>Stock Status</is_in_stock>
                    <url_key_create_redirect>Create Permanent Redirect for old URL</url_key_create_redirect>
                    <product_count>Product Count</product_count>
                </attributes>
                <routes>
                    <route_entity>
                        <route>/getproducts/count</route>
                        <action_type>entity</action_type>
                    </route_entity>
                     
                    <route_collection>
                        <route>/getproducts</route>
                        <action_type>collection</action_type>
                    </route_collection>
                </routes>
                <versions>1</versions>
            </restapi>
            
        </resources>
    </api2>
</config>
