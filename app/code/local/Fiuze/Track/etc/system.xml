                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <aftership_validation translate="label">
                            <label>Aftership Validation</label>
                            <frontend_type>Select</frontend_type>
                            <source_model>status/words</source_model>
                            <sort_order>48</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>required-entry</validate>
                        </aftership_validation>
                        <cron_schedule translate="label">
                            <label>Task Schedule</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>cron syntax</comment>
                            <validate>required-entry</validate>
                        </cron_schedule>
                    </fields>
                </messages>
            </groups>
        </aftership_options>
    </sections>
