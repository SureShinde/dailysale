<?xml version="1.0"?>
<!--
/**
* Deals Rotation
*
* @category   Fiuze
* @package    Fiuze_Deals
* @author     Alena Tsareva <alena.tsareva@webinse.com>
*/
-->
<config>
    <modules>
        <Fiuze_Deals>
            <version>0.1.0</version>
        </Fiuze_Deals>
    </modules>
    <global>
        <blocks>
            <fiuze_deals>
                <class>Fiuze_Deals_Block</class>
            </fiuze_deals>
        </blocks>
        <helpers>
            <fiuze_deals>
                <class>Fiuze_Deals_Helper</class>
            </fiuze_deals>
        </helpers>
        <models>
            <fiuze_deals>
                <class>Fiuze_Deals_Model</class>
                <resourceModel>fiuze_deals_resource</resourceModel>
            </fiuze_deals>
            <fiuze_deals_resource>
                <class>Fiuze_Deals_Model_Resource</class>
                <entities>
                    <deals>
                        <table>fiuze_deals</table>
                    </deals>
                </entities>
            </fiuze_deals_resource>
        </models>
        <resources>
            <fiuze_deals_setup>
                <setup>
                    <module>Fiuze_Deals</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </fiuze_deals_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <fiuze_deals>
                <use>standard</use>
                <args>
                    <module>Fiuze_Deals</module>
                    <frontName>fiuze_deals</frontName>
                </args>
            </fiuze_deals>
        </routers>
    </frontend>
</config>