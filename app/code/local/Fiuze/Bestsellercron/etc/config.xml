<?xml version="1.0"?>
<config>
    <modules>
        <Fiuze_Bestsellercron>
            <version>0.2.1</version>
        </Fiuze_Bestsellercron>
    </modules>
    <global>
        <blocks>
            <bestsellercron>
                <class>Fiuze_Bestsellercron_Block</class>
            </bestsellercron>
        </blocks>
        <helpers>
            <bestsellercron>
                <class>Fiuze_Bestsellercron_Helper</class>
            </bestsellercron>
        </helpers>
        <models>
            <bestsellercron>
                <class>Fiuze_Bestsellercron_Model</class>
            </bestsellercron>
        </models>
        <resources>
            <bestsellercron_setup>
                <setup>
                    <module>Fiuze_Bestsellercron</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </bestsellercron_setup>
        </resources>
        <events>
            <controller_front_init_before>
                <observers>
                    <bestsellers_controller_front_init_before>
                        <class>bestsellercron/observer</class>
                        <method>controllerFrontInitBefore</method>
                    </bestsellers_controller_front_init_before>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <frontend>
        <product>
            <collection>
                <attributes>
                    <bestsellercron_flag/>
                </attributes>
            </collection>
        </product>
        <routers>
            <bestsellercron>
                <use>standard</use>
                <args>
                    <module>Fiuze_Bestsellercron</module>
                    <frontName>bestsellercron</frontName>
                </args>
            </bestsellercron>
        </routers>
    </frontend>
    <default>
        <bestsellers_settings_sec>
            <bestsellers_settings_grp>
                <products>10</products>
                <time>00,00,00</time>
                <days>1</days>
                <category>1</category>
                <criteria>revenue</criteria>
                <scheduler>1 1 * * *</scheduler>
            </bestsellers_settings_grp>
        </bestsellers_settings_sec>
    </default>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <bestsellers_core_block_abstract_prepare_layout_after>
                        <class>bestsellercron/observer</class>
                        <method>coreBlockAbstractPrepareLayoutAfter</method>
                    </bestsellers_core_block_abstract_prepare_layout_after>
                </observers>
            </core_block_abstract_prepare_layout_after>
        </events>
    </adminhtml>
</config>