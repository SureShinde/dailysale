<?xml version="1.0"?>

<layout>
    <adminhtml_newsletterbooster_dashboard_index>
        <reference name="content">
            <block type="newsletterbooster/adminhtml_dashboard" name="dashboard">
                <block type="newsletterbooster/adminhtml_dashboard_campaign_switcher" name="store_switcher" as="store_switcher" template="newsletterbooster/dashboard/campaign/switcher.phtml">
                    <action method="setUseConfirm"><params>0</params></action>
                </block>
            </block>
        </reference>
    </adminhtml_newsletterbooster_dashboard_index>

    <adminhtml_newsletterbooster_campaign_new>
        <update handle="adminhtml_newsletterbooster_campaign_edit" />
    </adminhtml_newsletterbooster_campaign_new>

    <adminhtml_newsletterbooster_campaign_edit>
        <update handle="editor"/>
    </adminhtml_newsletterbooster_campaign_edit>

    <newsletterboosterPreview>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/highlight.css</name></action>
        </reference>
        <block type="core/template" name="root" output="toHtml" template="system/email/template/preview.phtml">
            <block type="newsletterbooster/adminhtml_template_preview" name="content" as="content"></block>
        </block>
    </newsletterboosterPreview>

    <adminhtml_newsletterbooster_queue_preview>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/highlight.css</name></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>newsletterbooster/preview/iframeswitcher.phtml</template></action>
            <block type="newsletterbooster/adminhtml_queue_preview_form" name="preview_form" />
            <block type="adminhtml/store_switcher" name="store_switcher" template="newsletterbooster/preview/store.phtml" />
        </reference>
    </adminhtml_newsletterbooster_queue_preview>

    <newsletterbooster_queue_preview>
        <block type="core/template" name="root" output="toHtml" template="newsletterbooster/queue/preview.phtml">
            <block type="newsletterbooster/adminhtml_queue_preview" name="content" as="content" />
        </block>
    </newsletterbooster_queue_preview>

</layout>
