<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <<!-- customer_account>       
        <reference name="customer_account_navigation">          
            <action method="addLink" translate="label" module="newsletterbooster">
                <name>newsletterbooster</name>
                <path>newsletterbooster/customer/campaign</path>
                <label>NewsletterBooster Campaign</label>
                <aParams>rel="nofollow"</aParams>
            </action>
        </reference>
    </customer_account>   -->
    
    <newsletterbooster_customer_campaign>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="newsletterbooster/customer" name="newsletterbooster.campaign" template="newsletterbooster/customer/campaign.phtml"/>
        </reference>
    </newsletterbooster_customer_campaign>

    <default>
        <reference name="right">
            <block type="newsletterbooster/subscribe" before="-" name="newsletterbooster.subscribe"/> 
        </reference>
    </default>
    <newsletterbooster_track_unsubscribe>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="newsletterbooster/form_unsubscribe" name="newsletterbooster.form.unsubscribe" template="newsletterbooster/form/unsubscribe.phtml"/>
        </reference>
    </newsletterbooster_track_unsubscribe>
</layout>