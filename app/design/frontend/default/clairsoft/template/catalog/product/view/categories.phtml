<?php
  $_product = $this->getProduct();
  $category_ids = $_product->getCategoryIds();

  $names = Mage::getModel('catalog/category')->getCollection()
  ->addAttributeToFilter('entity_id', array('in' => $category_ids))
  ->addAttributeToSelect('name')
  ->getColumnValues('name');

  $categories = implode(', ', $names);

  echo substr($categories, 0, -1);
?>
